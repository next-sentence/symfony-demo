<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        {{ user_avatar(user.avatar, user.name, "user-image") }}
        <span class="hidden-xs">{{ user.name }} ({{ user.username }})</span>
    </a>
    <ul class="dropdown-menu">
        <li class="user-header">
            {{ user_avatar(user.avatar, user.name) }}
            <p>
                {{ user.title }}
                {% if user.memberSince %}
                    <small>Member since {{ user.memberSince|date('d.m.Y') }}</small>
                {% endif %}
            </p>
        </li>
        {% if user.info %}
            <li class="user-body">
                <div class="col-xs-12 text-center">
                    {{ user.info }}
                </div>
            </li>
        {% endif %}
        <li class="user-footer">
            <div class="pull-left">
                <a href="{{ path("app_backend_dashboard") }}"
                   class="btn btn-default btn-flat">Profile</a>
            </div>
            <div class="pull-right">
                <a href="{{ path('app_backend_logout') }}" class="btn btn-default btn-flat">Sign out</a>
            </div>
        </li>
    </ul>
</li>
