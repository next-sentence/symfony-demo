<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width,initial-scale=1.0">
            <title>
                {% block title %}
                    {{ 'app.meta.frontend_title'|trans }}
                {% endblock %}
            </title>
                <meta name="description"
                      content="{% block meta_description %}{{ 'app.meta.frontend_description'|trans }}{% endblock %}"
                >

                <meta name="keywords"
                      content="{% block meta_keywords %}{{ 'sylius.meta.frontend_keywords'|trans }}{% endblock %}"
                >


            {% block stylesheets %}{% endblock %}
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
